@{
    Layout = "../Shared/_SidebarGiaoVien.cshtml";
    string ttgv_link = "/TTGV/" + ViewBag.GV.MaGv;
    string diem_link = "/Diem/" + ViewBag.GV.MaGv;
    string tkb_link = "/TKBGV/" + ViewBag.GV.MaGv;
    string imagefile = "/Image/" + ViewBag.GV.Anh;
}
<style>
    .tr-st {
        height: 50px;
    }

    .th-st {
        color: #999; /* Sử dụng màu nhạt, ví dụ: xám (#999) */
        font-weight: normal; /* Đặt font-weight về normal (không đậm) */
        height: 35px;
    }
</style>
@section Section3{
    <a href="@ttgv_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Thông tin GV
    </a>
}
@section Section4{
    <a href="@diem_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Điểm Học Sinh
    </a>
}
@section Section5{
    <a href="@tkb_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Lịch công tác
    </a>
}
<div style="margin-left:60px;margin-top:20px">
    <div style="float:left">
        <img src="@imagefile" style="width:300px" />
        <table style="margin-top:50px">
            <tr>
                <th class="th-st">
                    Mã Giáo Viên:
                </th>
                <th>
                    @ViewBag.Gv.MaGv
                </th>
            </tr>
            <tr>
                <th class="th-st">
                    Tên Giáo Viên:
                </th>
                <th>
                    @ViewBag.GV.TenGv
                </th>
            </tr>

            <tr>
                <th class="th-st">
                    Giới tính:
                </th>
                <th>
                    @ViewBag.GV.GioiTinh
                </th>
            </tr>
        </table>
    </div>
    <div style="float:left">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Thông tin cá nhân</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Học vấn</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Thông tin sức khỏe</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent" style="margin-left:40px;margin-top:30px">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h3>Thông tin cá nhân</h3>
                <table>
                    <tr>
                        <th class="th-st">
                            Ngày Sinh:
                        </th>
                        <th>
                            @ViewBag.GV.NgaySinh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Quê quán:
                        </th>
                        <th>
                            @ViewBag.GV.QueQuan
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Tôn giáo:
                        </th>
                        <th>
                            Không
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Số điện thoại Giáo Viên:
                        </th>
                        <th>
                            @ViewBag.GV.SoDienThoaiGv
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Dân tộc:
                        </th>
                        <th>
                            Kinh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Họ tên vợ/chồng:
                        </th>
                        <th>
                            Đang cập nhật
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            SDT vợ/chồng/người liên hệ khác:
                        </th>
                        <th>
                            Đang cập nhật
                        </th>
                    </tr>
                </table>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <h3>Học vấn</h3>
                <table>
                    <tr>
                        <th class="th-st">
                            Chuyên môn:
                        </th>
                        <th>
                            @ViewBag.GV.ChuyenMon
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Trạng thái:
                        </th>
                        <th>
                            Đang dạy học
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Bằng cấp:
                        </th>
                        <th>
                            Thạc Sĩ
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Ngày bắt đầu làm việc tại trường:
                        </th>
                        <th>
                            @ViewBag.GV.NgayBatDau
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Mô tả khác:
                        </th>
                        <th>
                            @ViewBag.GV.Motakhac
                        </th>
                    </tr>
                </table>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
        </div>
    </div>
</div>