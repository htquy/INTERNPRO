@{
    Layout = "../Shared/_SidebarStudent.cshtml";
    string tths_link = "/TTHS/" + ViewBag.Hs.MaHs;
    string diem_link = "/DiemHS/" + ViewBag.Hs.MaHs;
    string tkb_link = "/TKBHS/" + ViewBag.Hs.MaHs;
    string imagefile = "/Image/" + ViewBag.Hs.Anh;
}
<style>
    .tr-st {
        height: 50px;
    }

    .th-st {
        color: #999; /* Sử dụng màu nhạt, ví dụ: xám (#999) */
        font-weight: normal; /* Đặt font-weight về normal (không đậm) */
        height: 35px;
    }
</style>
@section Section3{
    <a href="@tths_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Thông tin HS
    </a>
}
@section Section4{
    <a href="@diem_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Điểm Học Tập
    </a>
}
@section Section5{
    <a href="@tkb_link" class="nav-link text-white custom-nav-link">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
        Thời khóa biểu
    </a>
}
<div style="margin-left:60px;margin-top:20px">
    <div style="float:left">
        <img src="@imagefile" style="width:300px" />
        <table style="margin-top:50px">
            <tr>
                <th class="th-st">
                    Mã HS:
                </th>
                <th>
                    @ViewBag.Hs.MaHs
                </th>
            </tr>
            <tr>
                <th class="th-st">
                    Tên HS:
                </th>
                <th>
                    @ViewBag.Hs.HoTenHs
                </th>
            </tr>

            <tr>
                <th class="th-st">
                    Giới tính:
                </th>
                <th>
                    @ViewBag.Hs.GioiTinh
                </th>
            </tr>
        </table>
    </div>
    <div style="float:left">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Thông tin cá nhân</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Học vấn</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Thông tin sức khỏe</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent" style="margin-left:40px;margin-top:30px">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h3>Thông tin cá nhân</h3>
                <table>
                    <tr>
                        <th class="th-st">
                            Ngày Sinh:
                        </th>
                        <th>
                            @ViewBag.Hs.NgaySinh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Quê quán:
                        </th>
                        <th>
                            @ViewBag.Hs.QueQuan
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Tôn giáo:
                        </th>
                        <th>
                            Không
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Số điện thoại HS:
                        </th>
                        <th>
                            @ViewBag.Hs.SoDienThoaiHs
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Dân tộc:
                        </th>
                        <th>
                            Kinh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Đối tượng ưu tiên:
                        </th>
                        <th>
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Khu vực :
                        </th>
                        <th>
                            Khu vực 2 Nông thôn
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Họ tên bố/mẹ:
                        </th>
                        <th>
                            @ViewBag.Hs.HoTenPh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            SDT bố/mẹ:
                        </th>
                        <th>
                            @ViewBag.Hs.SoDienThoaiPh
                        </th>
                    </tr>
                </table>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <h3>Học Tập</h3>
                <table>
                    <tr>
                        <th class="th-st">
                            Lớp quản lý:
                        </th>
                        <th>
                            @ViewBag.Hs.TenLop
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Trạng thái:
                        </th>
                        <th>
                            Đang học
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Bậc đào tạo:
                        </th>
                        <th>
                            Trung học phổ thông
                        </th>
                    </tr>
                    @{
                        var Khoa = ViewBag.Hs.NgayNh.Year - 1969;
                    }
                    <tr>
                        <th class="th-st">
                            Khóa:
                        </th>
                        <th>
                            @Khoa
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Ngày nhập học:
                        </th>
                        <th>
                            @ViewBag.Hs.NgayNh
                        </th>
                    </tr>
                    <tr>
                        <th class="th-st">
                            Loại hình đào tạo:
                        </th>
                        <th>
                            Chính quy, công lập
                        </th>
                    </tr>
                </table>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
        </div>
    </div>
</div>