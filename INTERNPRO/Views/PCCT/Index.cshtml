@{
    Layout = "../Shared/_SidebarAdmin.cshtml";
}
<script src="~/js/PCCT.js"></script>
<div>
    <p>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 style="color:blue">Phân công công tác theo lớp</h1>
                    <h2><label for="lop">Chọn Lớp:</label></h2>
                    <p>
                        <input list="lops" id="lop" name="lop">
                        <datalist id="lops">
                            @foreach (var item in ViewBag.Lop)
                            {
                                <option value="@item"></option>
                            }
                        </datalist>
                        <button id="showPCCT" class="btn btn-primary" onclick="ShowPCCT(document.getElementById('lop').value)">Tìm kiếm</button>
                    </p>

                </div>
                </div>
        </div>
    </p>
</div>